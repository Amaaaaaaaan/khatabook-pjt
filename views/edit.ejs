<%- include('./partials/header.ejs') %>
    <div class="container mx-auto p-6">
        <div class="max-w-lg mx-auto bg-white p-6 border border-gray-300 rounded-lg shadow-md">
            <h2 class="text-2xl font-semibold mb-4">Create New Hisaab</h2>
            <form action="/hisaab/edit" method="post">
                <div class="mb-4">
                    <input disabled name="title" type="text"   value="<%=update.title%>"
                    
                        class="w-full p-2 border border-gray-300 rounded" >
                       
                        
                </div>
                <div class="mb-4">
                    <textarea name="description" placeholder="Daal, Aata, Cheeni"
                        class="resize-none w-full  border border-gray-300 rounded h-32"><%= update.description %>
                    </textarea>
                </div>
                <div>
                    <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded">update hisaab</button>
                </div>
            </form>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>